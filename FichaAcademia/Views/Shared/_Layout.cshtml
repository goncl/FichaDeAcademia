@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FichaAcademia</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
    <header>

        <nav>
            <div class="nav-wrapper grey darken-3 body-content">
                <a href="#" class="brand-logo">Fichas de academia</a>
                <ul id="nav-mobile" class="right hide-on-med-and-down">
                    @*Se não estiver logado mostrar apenas login e registrar no menu*@
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li><a asp-controller="Administradores" asp-action="Login">Login</a></li>
                        <li><a asp-controller="Administradores" asp-action="Registrar">Registrar</a></li>
                    }
                    @*Se estiver logado mostrar todas as opcões de menu*@
                    else
                    {
                        <li><a asp-controller="Objetivos" asp-action="Index">Objetivos</a></li>
                        <li><a asp-controller="Exercicios" asp-action="Index">Exercicios</a></li>
                        <li><a asp-controller="CategoriasExercicios" asp-action="Index">Categoria</a></li>
                        <li><a asp-controller="Professores" asp-action="Index">Professores</a></li>
                        <li><a asp-controller="Alunos" asp-action="Index">Alunos</a></li>
                        <li>Bem vindo, @HttpContextAccessor.HttpContext.Session.GetString("Usuario")</li>
                        <li><a asp-controller="Administradores" asp-action="Logout">Logout</a></li>
                    }
                </ul>
            </div>
        </nav>

    </header>
    <div class="container body-content">
        @RenderBody()
        <footer class="border-top text-muted">
            <p>&copy; 2018 - FichaAcademia</p>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
